using namespace std;
#include<iostream>


class student
{
private :
	string name;
	int age;

public :
	student()
	{
		name = "Unknown";
		age = 0;
	}
	student(string n, int a)
	{
		name = n;
		age = a;
	}

	void set(string n, int a)
	{
		name = n;
		age = a;
	}
	void print()
	{
		cout << "name: " << name << "\t" << "age: " << age;
	}
};



int main()
{
	student s[3];

	s[0].set ("shrouk", 23);
	s[1].set("ahmed", 24);
	s[2].set("hana", 14);

	for (int i = 0; i < 3; i++)
	{
       s[i].print();
	}


}
